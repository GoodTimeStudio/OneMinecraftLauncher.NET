<Controls:MetroWindow x:Class="GoodTimeStudio.OneMinecraftLauncher.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:OneLauncher_Reloaded_Lite"
        mc:Ignorable="d"
        Title="One Minecraft Launcher" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatButton.xaml" />
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="8.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8.5*" />
            <RowDefinition Height="1.5*" />
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="2" Grid.ColumnSpan="2" Background="White" Panel.ZIndex="1" Opacity="0.9"
              x:Name="LoginScreen" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Controls:ProgressRing Grid.RowSpan="2"/>
            <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="15" Width="200"  TextAlignment="Center"
                       x:Name="_TB_LoginScreenTip"/>
        </Grid>

        <StackPanel Margin="5,10,0,0">
            <TextBlock Text="用户名" Margin="0,0,0,10" Height="26" />
            <TextBlock Text="密码" Margin="0,0,0,10" Height="26" />
            <TextBlock Text="Java路径" Margin="0,0,0,10" Height="26" />
            <TextBlock Text="最大内存" Margin="0,0,0,10" Height="26" />
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="0,10,0,0">
            <TextBox x:Name="_TB_UserName" HorizontalAlignment="Left" Width="100" Margin="0,0,0,10" Height="26"/>
            <PasswordBox x:Name="_TB_Password" HorizontalAlignment="Left" Width="150" Margin="0,0,0,10" Height="26" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="_TB_JavaPath" Margin="0,0,0,10" Height="26" />
                <Button Grid.Column="1" Content="选择路径" Margin="5,0,0,10" />
            </Grid>
            
            <TextBox x:Name="_TB_MaxMemory" HorizontalAlignment="Left" Width="100" Height="26" />
        </StackPanel>

        <Button x:Name="_BTN_Launch"  Grid.Column="1" Grid.Row="1" Content="启动" HorizontalAlignment="Right" Margin="0,5,10,5" Width="120" Click="_BTN_Launch_Click" />

        <TextBlock Text="Version 0.1-dev    Copyright © 2017 GoodTime Studio" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" />

    </Grid>

</Controls:MetroWindow>
